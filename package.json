{
    "name": "book-service",
    "version": "1.0.0",
    "description": "Enterprise Publishing Platform - Book Management Service",
    "main": "src/server.js",
    "scripts": {
        "start": "node src/server.js",
        "dev": "nodemon src/server.js",
        "build": "echo 'Build completed'",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage --coverageThreshold='{\"global\":{\"lines\":100,\"functions\":100,\"branches\":100,\"statements\":100}}'",
        "test:verbose": "jest --verbose",
        "test:silent": "jest --silent",
        "lint": "eslint src/",
        "format": "prettier --write src/",
        "migrate": "npx sequelize-cli db:migrate",
        "migrate:undo": "npx sequelize-cli db:migrate:undo",
        "seed": "npx sequelize-cli db:seed:all",
        "seed:undo": "npx sequelize-cli db:seed:undo:all"
    },
    "dependencies": {
        "aws-sdk": "^2.1498.0",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "joi": "^17.13.3",
        "jsonwebtoken": "^9.0.2",
        "multer": "^1.4.5-lts.1",
        "pg": "^8.11.3",
        "pg-hstore": "^2.3.4",
        "sequelize": "^6.35.0",
        "stripe": "^14.7.0",
        "winston": "^3.11.0",
        "winston-daily-rotate-file": "^4.7.1"
    },
    "devDependencies": {
        "@faker-js/faker": "^9.8.0",
        "eslint": "^8.55.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.2",
        "pg-mem": "^3.0.5",
        "prettier": "^3.1.1",
        "sequelize-cli": "^6.6.2",
        "supertest": "^7.1.1"
    },
    "keywords": [
        "book",
        "publishing",
        "microservice",
        "express",
        "sequelize"
    ],
    "author": "Book Service Team",
    "license": "MIT"
}